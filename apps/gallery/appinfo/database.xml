<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*faceImage</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                <autoincrement>1</autoincrement>
                <length>4</length>
            </field>        
            <field>
                <name>faceId</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>128</length>                
            </field>
            <field>
                <name>faceness</name>
                <type>float</type>
                <notnull>true</notnull>
                <length>128</length>                
            </field>
            <field>
                <name>personId</name>
                <type>text</type>                
                <notnull>false</notnull>
                <length>128</length>
            </field>
            <field>
                <name>fileId</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>128</length>
                <comments>File ID in ownCloud</comments>
            </field>
            <field>
                <name>userId</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>128</length>
                <comments>Current user name</comments>
            </field>
            <field>
                <name>filePath</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>4096</length>
                <comments>File path in Linux system</comments>
            </field>
            <field>
                <name>categories</name>
                <type>text</type>
                <notnull>false</notnull>
                <length>128</length>
                <comments>categories for selfie, party, sports, security camera ...</comments>
            </field>
            <field>
                <name>timeStamp</name>
                <type>time</type>
                <notnull>false</notnull>
                <length>128</length>
                <comments>greate timestamp</comments>
            </field>                                     
        </declaration>
    </table>
    <table>
        <name>*dbprefix*personTag</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                <autoincrement>1</autoincrement>
                <length>4</length>
            </field>
            <field>
                <name>personId</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>128</length>                            
            </field>
            <field>
                <name>tag1</name>
                <type>text</type>
                <notnull>false</notnull>
                <length>128</length>
                <comments>person name. maybe someone has two name, we can add another tag</comments>
            </field>
            <field>
                <name>tag2</name>
                <type>text</type>
                <notnull>false</notnull>
                <length>128</length>
                <comments>person name. maybe someone has two name, we can add another tag</comments>
            </field>
            <field>
                <name>thumbnailName</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>4096</length>
                <comments>name of thumbnail</comments>            
            </field>
            <field>
                <name>userId</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>128</length>
                <comments>Current user name</comments>
            </field>
            <field>
                <name>timeStamp</name>
                <type>time</type>
                <notnull>false</notnull>
                <length>128</length>
                <comments>greate timestamp</comments>
            </field> 
        </declaration>    
    </table>
</database>
